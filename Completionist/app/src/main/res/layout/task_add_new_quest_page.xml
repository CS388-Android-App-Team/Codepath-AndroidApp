<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/task_add_new_quest_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/decline_button"
        android:layout_width="145dp"
        android:layout_height="39dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="168dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quest_date"
        app:srcCompat="@drawable/rectangle_green" />

    <EditText
        android:id="@+id/quest_date"
        android:layout_width="254dp"
        android:layout_height="51dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:hint="Quest Date (ex: 12/11/2023)"
        android:inputType="date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quest_name" />

    <TextView
        android:id="@+id/new_quest_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="96dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/michroma"
        android:text="New Quest"
        android:textColor="#333333"
        android:textSize="24sp"
        android:typeface="serif"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/logo3"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="7dp"
        android:src="@drawable/logo_with_hex"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/quest_name"
        android:layout_width="254dp"
        android:layout_height="51dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="92dp"
        android:ems="10"
        android:hint="Quest Name"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo3" />

    <EditText
        android:id="@+id/XP_amount"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="175dp"
        android:ems="10"
        android:hint="XP (1-10)"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@+id/quest_name"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/accept_button"
        android:layout_width="145dp"
        android:layout_height="39dp"
        android:layout_marginTop="168dp"
        android:layout_marginEnd="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quest_date"
        app:srcCompat="@drawable/rectangle_green" />

    <TextView
        android:id="@+id/decline_text"
        android:layout_width="68dp"
        android:layout_height="22dp"
        android:text="Decline"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/decline_button"
        app:layout_constraintEnd_toEndOf="@+id/decline_button"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="@+id/decline_button"
        app:layout_constraintTop_toTopOf="@+id/decline_button"
        app:layout_constraintVertical_bias="0.47" />

    <TextView
        android:id="@+id/accept_text"
        android:layout_width="68dp"
        android:layout_height="22dp"
        android:text="Accept"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/accept_button"
        app:layout_constraintEnd_toEndOf="@+id/accept_button"
        app:layout_constraintHorizontal_bias="0.662"
        app:layout_constraintStart_toStartOf="@+id/accept_button"
        app:layout_constraintTop_toTopOf="@+id/accept_button"
        app:layout_constraintVertical_bias="0.47" />

</androidx.constraintlayout.widget.ConstraintLayout>