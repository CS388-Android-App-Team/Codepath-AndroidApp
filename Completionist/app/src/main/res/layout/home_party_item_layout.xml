<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="126dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/rectangle_green" />

    <ImageView
        android:id="@+id/partyprofileimagehome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.103"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.567"
        app:srcCompat="@drawable/default_user" />

    <TextView
        android:id="@+id/partymembernamehome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/michroma"
        android:text="John Doe"
        app:layout_constraintStart_toEndOf="@+id/partyprofileimagehome"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pmhomeTasks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/michroma"
        android:text="Number of Tasks: 5"
        android:textAlignment="viewStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/pmhomeExp"
        app:layout_constraintTop_toTopOf="@+id/pmhomeExp" />

    <TextView
        android:id="@+id/pmhomeExp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/michroma"
        android:text="EXP: 0"
        android:textAlignment="viewStart"
        app:layout_constraintStart_toEndOf="@+id/partyprofileimagehome"
        app:layout_constraintTop_toTopOf="@+id/partymembernamehome" />
</androidx.constraintlayout.widget.ConstraintLayout>